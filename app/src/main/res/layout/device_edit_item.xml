<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/free_dialog_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_edit_device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="修改设备信息"
            android:textColor="#38ADFF"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="设备ID:" />

            <EditText
                android:id="@+id/et_device_id"
                android:layout_toEndOf="@id/tv_device_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00001"
                android:background="@null"
                android:textSize="14sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_device_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="经度:"/>
            <EditText
                android:id="@+id/et_device_lat"
                android:layout_toEndOf="@id/tv_device_lat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00.000000"
                android:background="@null"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_device_lng"
                android:layout_toRightOf="@id/et_device_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="纬度:"/>
            <EditText
                android:id="@+id/et_device_lng"
                android:layout_toEndOf="@id/tv_device_lng"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00.000000"
                android:background="@null"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_device_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="MAC地址:"/>
            <EditText
                android:id="@+id/et_device_mac"
                android:layout_toEndOf="@id/tv_device_mac"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00:00:00:00:00:00"
                android:background="@null"
                android:textSize="14sp"/>
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_accept"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:maxLines="1"
                android:text="确定"
                android:textColor="#38ADFF"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#E4E4E4" />

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:maxLines="1"
                android:text="取消"
                android:textColor="#7D7D7D"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>